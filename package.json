{
  "name": "corobot",
  "version": "1.1.0",
  "description": "A bot to watch and respond to kleros governor events.",
  "main": "index.js",
  "scripts": {
    "start:debug": "node --inspect=5858 -r ts-node/register ./src/index.ts",
    "start": "nodemon --exec yarn start:debug",
    "production": "yarn build && node dist/index.js",
    "build": "rimraf dist && tsc -p .",
    "lint:js": "eslint '**/*.js' --ignore-pattern 'public/ethers.min.js'",
    "lint:secrets": "secretlint \"**/*\"",
    "lint": "yarn lint:js && yarn lint:secrets",
    "format": "eslint '**/*.js' --ignore-pattern 'public/ethers.min.js' --fix",
    "clean": "rimraf ./db/* && nodetouch ./db/.gitkeep",
    "release": "standard-version"
  },
  "author": "Kleros",
  "license": "MIT",
  "private": true,
  "keywords": [
    "kleros",
    "governor",
    "bot"
  ],
  "dependencies": {
    "@kleros/kleros": "^0.1.2",
    "@sendgrid/mail": "^6.5.4",
    "ajv": "^6.12.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "ethers": "^4.0.45",
    "express": "^4.17.1",
    "level": "^6.0.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@secretlint/secretlint-rule-preset-recommend": "^1.0.1",
    "@secretlint/secretlint-rule-secp256k1-privatekey": "^1.0.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-prettier-standard": "^3.0.1",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^17.2.0",
    "husky": "^4.2.3",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "prettier-config-standard": "^1.0.1",
    "rimraf": "^3.0.2",
    "secretlint": "^1.0.1",
    "standard-version": "^7.1.0",
    "touch": "^3.1.0",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "/node_modules/**"
    ],
    "globals": [
      "require"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:js && yarn lint:secrets",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
